{
  "name": "mycontexts",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "prebuild": "node ./src/generateManifest.js",
    "build": "pnpm exec tsc -b && vite build",
    "build:root": "cross-env BUILD_PATH=/ vite build",
    "build:www": "cross-env BUILD_PATH=/www/ vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "publishWWW": "scp -r ./dist/* joop@inplace.works:/var/www/mycontexts.com/www",
    "publishProduction": "scp -r ./dist/* joop@inplace.works:/var/www/mycontexts.com"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/pouchdb-browser": "^6.1.5",
    "bootstrap-icons": "^1.11.3",
    "bootswatch": "^5.3.3",
    "events": "^3.3.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "idb-keyval": "^6.2.1",
    "perspectives-core": "workspace:*",
    "perspectives-pageworker": "workspace:*",
    "perspectives-proxy": "workspace:*",
    "perspectives-react": "workspace:*",
    "perspectives-sharedworker": "workspace:*",
    "pouchdb-browser": "^9.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@4c/tsconfig": "^0.4.1",
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-commonjs": "^28.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fast-glob": "^3.3.3",
    "globals": "^16.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.14.0",
    "typescript": "^5.8.3",
