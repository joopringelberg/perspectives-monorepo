{
  "name": "perspectives-core",
  "version": "3.0.12",
  "description": "Core functionality of Perspectives",
  "license": "GPL-3.0-or-later",
  "author": "Joop Ringelberg <joop.ringelberg@gmail.com>",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@stomp/stompjs": "^7.1.1",
    "fuzzysort": "^3.1.0",
    "idb-keyval": "^6.2.2",
    "js-yaml": "^4.1.0",
    "lru-cache": "^11.1.0",
    "pouchdb-browser": "^9.0.0",
    "purescript-yoga-subtlecrypto": "github:rowtype-yoga/purescript-yoga-subtlecrypto"
  },
  "peerDependencies": {
    "events": "^3.3.0",
    "eventsource": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joopringelberg/perspectives-core.git"
  },
  "main": "dist/perspectives-core.js",
  "type": "module",
  "homepage": "https://github.com/joopringelberg/perspectives-core#readme",
  "scripts": {
    "symlinks": "./createPerspectivesLinks.sh",
    "docs": "./gendocs.sh",
    "stats": "webpack --json > stats.json",
    "copyCore": "scp -r ./dist/* joop@inplace.works:/var/www/mycontexts.com/remotetest",
    "copyCoreToRoot": "scp -r ./dist/* joop@inplace.works:/var/www/mycontexts.com",
    "copyCoreToWWW": "scp -r ./dist/* joop@inplace.works:/var/www/mycontexts.com/www",
    "fmt": "purs-tidy format-in-place \"src/**/*.purs\"",
    "transpileDependencies": "node ./scripts/transpile-model-deps.mjs --cache-dir ./.cache/sidecars --in-file ./scripts/modelDependencies_source.purs --out-file ./src/core/modelDependencies.purs || echo '[transpile] skipping (no versions or offline)'",
    "prebuild": "node ./scripts/transpile-model-deps.mjs --cache-dir ./.cache/sidecars --in-file ./scripts/modelDependencies_source.purs --out-file ./src/core/modelDependencies.purs || echo '[transpile] skipping (no versions or offline)'",
    "build": "pnpm run fmt && pnpm exec spago build && rollup -c",
    "modulemap": "node build-module-map.mjs > module-map.json"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-url": "^8.0.2",
    "rollup-plugin-delete": "^3.0.1"
  }
}