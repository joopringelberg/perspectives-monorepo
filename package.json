{
  "name": "perspectives-monorepo",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm --recursive run build",
    "dev": "pnpm --recursive run dev",
    "version": "lerna version --no-push",
    "version:patch": "lerna version patch --yes --no-push --no-lifecycle",
    "version:minor": "lerna version minor --yes --no-push --no-lifecycle",
    "version:major": "lerna version major --yes --no-push --no-lifecycle",
    "prepare": "husky",
    "commit": "cz",
    "fmt": "purs-tidy format-in-place \"packages/*/src/**/*.purs\""
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@vitejs/plugin-react": "^4.5.2",
    "axe-core": "^4.10.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "lint-staged": "^16.1.2",
    "pnpm": "^10.12.1",
    "purs-tidy": "^0.11.0",
    "rollup": "^4.44.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "5"
      },
      "ignoreMissing": [
        "typescript"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "type": "module"
}